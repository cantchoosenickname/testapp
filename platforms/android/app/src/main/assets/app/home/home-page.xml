<Page class="page"
    navigatingTo="onNavigatingTo"
    xmlns="http://schemas.nativescript.org/tns.xsd"
    xmlns:nsDrawer="nativescript-ui-sidedrawer"
    >

    <ActionBar class="action-bar">
        <Label class="action-bar-title" text=""></Label>
    </ActionBar>

    <StackLayout >
      <Label text="{{ mainContentText }}" textWrap="true" fontSize="13" padding="10" />

      <Button text="Open drawer" tap="onOpenMenuTap" />

      <Button text="Tap Me!" tap="goTo" path="foods-list/foods-list-page" class="btn btn-primary btn-active" />


      <Button text="go to maps page" tap="goTo" path="map/map-page"/>
    </StackLayout>


</Page>
