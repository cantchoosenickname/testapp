<Page navigatingTo="onNavigatingTo" class="page"
    xmlns="http://schemas.nativescript.org/tns.xsd" >
    <ActionBar class="action-bar">
        <Label class="action-bar-title" text="Food Description"></Label>
    </ActionBar>

    <StackLayout class="list-group-item">
      <Label text="{{ title || 'Downloading...' }}" textWrap="true" class="title" />
      <Image src="{{ image_url }}" width="100" height="100" stretch="aspectFill" class="food-list-image"/>

      <Label text="{{ descr }}" textWrap="true" class="food-list-descr" />
      <Label text="{{ price }}" textWrap="true" class="food-list-price" />



      <Button text="Зарезервировать" tap="reserveTap" class="btn btn-primary btn-active" />

       <Label text="Тут должна быть карта, но мне лень пердолиться с ней" textWrap="true" />

    </StackLayout>
</Page>
